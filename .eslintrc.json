{
    "extends": [
        "airbnb",
        "prettier"
    ],
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error"
    },
    "env": {
        "browser": true,
        "node": true,
        "jasmine": true
    },
    "no-restricted-imports": [
        "error",
        {
            "paths": [
                {
                    "name": "styled-components",
                    "message": "Please import from styled-components/macro."
                }
            ],
            "patterns": [
                "!styled-components/macro"
            ]
        }
    ]
}